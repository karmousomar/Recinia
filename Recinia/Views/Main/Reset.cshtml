@model ResetPassword
@{
    ViewData["Title"] = "Reset";
}
@using (Html.BeginForm())
{
    @*@Html.AntiForgeryToken()*@
    <div class="ui raised very padded text container">
        <h2 class="ui header centered">Reset Password</h2>
        @*<form asp-controller="Main" asp-action="Reset" class="ui large form validate-me" methos="post">*@
    <input asp-for="Code" type="hidden" value="@Context.Request.Query["code"]" />
            <div class="ui stacked segment">
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        @Html.EditorFor(m => m.Email)
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        @Html.EditorFor(m => m.Password)
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        @Html.EditorFor(m => m.ConfirmPassword)
                    </div>
                </div>
                <input type="submit" class="ui large orange submit button" name="Done" value="Reset" />
                <div asp-validation-summury="All" class="ui error message"></div>
            </div>
        @*</form>*@
    </div>
}