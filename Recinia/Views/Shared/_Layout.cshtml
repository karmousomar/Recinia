@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <title>@ViewData["Title"] - Recinia</title>
    <environment names="Development">
        <link href="~/lib/semantic-ui/semantic.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
        <link href="~/lib/semantic-ui/semantic.min.css" rel="stylesheet" />
        <script src="~/node_modules/core-js/client/shim.js"></script>

        <script src="~/node_modules/zone.js/dist/zone.js"></script>
        <script src="~/node_modules/reflect-metadata/Reflect.js"></script>
        <script src="~/node_modules/systemjs/dist/system.src.js"></script>
        <script src="~/systemjs.config.js"></script>
        <script>
            System.import('app/main').catch(function (err) { console.error(err); });
        </script>
        @*<script src="~/lib-npm/es6-shim/es6-shim.js"></script>
        <script src="~/lib-npm/systemjs/system.js"></script>
        <script src="~/lib-npm/angular/common/bundles/common.umd.js"></script>
        <script src="~/lib-npm/angular/core/bundles/core.umd.js"></script>
        <script src="~/lib-npm/angular/compiler/bundles/compiler.umd.js"></script>
        <script src="~/lib-npm/angular/platform-browser/bundles/platform-browser.umd.js"></script>
        <script src="~/lib-npm/angular/platform-browser-dynamic/bundles/platform-browser-dynamic.umd.js"></script>
        <script src="~/lib-npm/rxjs/Rx.min.js"></script>
        <script src="~/app/main.js"></script>*@
    </environment>

    <environment names="Staging,Production">
        <link href="~/lib/semantic-ui/semantic.min.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
        <link href="~/lib/semantic-ui/semantic.css" rel="stylesheet" />
        <script src="~/node_modules/core-js/client/shim.js"></script>

        <script src="~/node_modules/zone.js/dist/zone.js"></script>
        <script src="~/node_modules/reflect-metadata/Reflect.js"></script>
        <script src="~/node_modules/systemjs/dist/system.src.js"></script>
        <script src="~/systemjs.config.js"></script>
        <script>
            System.import('app/main').catch(function (err) { console.error(err); });
        </script>

        @*<script src="~/lib-npm/es6-shim/es6-shim.js"></script>
        <script src="~/lib-npm/systemjs/system.js"></script>
        <script src="~/lib-npm/angular/common/bundles/common.umd.js"></script>
        <script src="~/lib-npm/angular/core/bundles/core.umd.js"></script>
        <script src="~/lib-npm/angular/compiler/bundles/compiler.umd.js"></script>
        <script src="~/lib-npm/angular/platform-browser/bundles/platform-browser.umd.js"></script>
        <script src="~/lib-npm/angular/platform-browser-dynamic/bundles/platform-browser-dynamic.umd.js"></script>
        <script src="~/lib-npm/rxjs/Rx.min.js"></script>*@
    </environment>
    @*<script>
        System.config({ packages: { app: { DefaultExtension: 'js' } } });
        System.import('app/main').then(null, console.error.bind(console));
    </script>*@
    @Html.Raw(JavaScriptSnippet.FullScript)
    
</head>
<body>
    <div>
        @RenderBody()
    </div>
    <environment names="Development">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/jquery-validation/jquery.validate.js"></script>
        <script src="~/lib/semantic-ui/semantic.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/js/site.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
        <script src="~/lib/semantic-ui/semantic.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/js/site.js"></script>
    </environment>
    @RenderSection("scripts", required: false)
</body>
</html>
