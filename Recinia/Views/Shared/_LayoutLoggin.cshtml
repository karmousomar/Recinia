<!DOCTYPE Html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <environment names="Development">
        <link href="~/lib/semantic-ui/semantic.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link href="~/lib/semantic-ui/semantic.min.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>
</head>
<body>
    <!--Side Bar-->
    <div class="ui visible inverted left vertical sidebar menu">
        <a class="item"><i class="home icon"></i>HomePage</a>
    </div>
    <!--Fixed Nav Bar-->
    <div class="ui top fixed menu">
        @*<a class="item" asp-controller="LoggedIn"asp-action="Logout">Logout</a>*@
        @await Html.PartialAsync("_LoginPartial")
    </div>
    <!--Content from cshtml pages -->
    <div class="pusher">
        @RenderBody()
    </div>
    <environment names="Development">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/jquery-validation/jquery.validate.js"></script>
        <script src="~/lib/semantic-ui/semantic.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/js/site.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
        <script src="~/lib/semantic-ui/semantic.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/js/site.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
